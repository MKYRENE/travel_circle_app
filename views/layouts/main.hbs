<body>
  <!-- Header -->
  <header>
    <div class="globe">
      <img src="/assets/photos/earth.png" alt="globe">
    </div>
    <!-- Navigation Bar -->
    <nav>
      {{#if isLoggedIn}}
      {{!-- This edits navbar on Dashboard. --}}
      <p>Welcome, {{firstName}}!</p>
      <a href="/feed" class="{{#if isFeed}}active{{/if}}">Feed</a>
      <a href="/dashboard" class="{{#if isDashboard}}active{{/if}}">Dashboard</a>
      <a href="/about" class="{{#if isAbout}}active{{/if}}">About Us</a>
      <a href="/logout">Log Out</a>
      {{else}}
      {{!-- This edits navbar on home page. --}}
      <a href="/" class="{{#if isHome}}active{{/if}}">Home</a>
      <a href="/about" class="{{#if isAbout}}active{{/if}}">About Us</a>
      <a href="/login" class="{{#if isLoginOrRegister}}active{{/if}}">Login/Sign Up</a>
      {{/if}}
    </nav>
  </header>

  <!-- The main content of the page, will be replaced by other templates -->
  {{{body}}}

  <!-- Mapbox JS script -->
  <script src="https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.js"></script>

</body>


  <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <!-- Footer logo -->
            <div class="footer-logo">
                <img src="/assets/photos/earth.png" alt="Travel Circle Logo">
            </div>
            <!-- Footer links -->
            <div class="footer-links">
                <a href="/">Home</a>
                <a href="/about">About</a>
                <a href="/about#team-contact">Contact</a>
            </div>
        </div>
        <!-- Footer bottom -->
        <div class="footer-bottom">
            <p>&copy; 2023 Travel Circle. All rights reserved.</p>
        </div>
    </footer>

