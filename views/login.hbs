<form action="/login" method="POST">
    <h1>User Login</h1>

    <label for="username">Username:</label>
    <input name="username" type="text" id="username" placeholder="Enter username" required minlength="3">
    
    <label for="password">Password:</label>
    <input name="password" type="password" id="password" placeholder="Enter password" required minlength="6">
    <button>Sign In</button>
    <p>Not a member? <a href="/register">Create Account</a></p>
</form>